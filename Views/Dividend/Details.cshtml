@model WebApplication2.Models.Dividend
@{
    ViewData["Title"] = "Dividend Details";
}

<div class="container mt-4">
    <h1 class="h3 text-light">@ViewData["Title"]</h1>

    <div class="card bg-dark text-light">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.DividendId</dd>

                <dt class="col-sm-3">Stock Id</dt>
                <dd class="col-sm-9">@Model.StockId</dd>

                <dt class="col-sm-3">User Id</dt>
                <dd class="col-sm-9">@Model.UserId</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.Amount</dd>

                <dt class="col-sm-3">Received Date</dt>
                <dd class="col-sm-9">@Model.ReceivedDate.ToString("f")</dd>
            </dl>

            <a asp-action="Edit" asp-route-id="@Model.DividendId" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to list</a>
        </div>
    </div>
</div>
