@model IEnumerable<WebApplication2.Models.Dividend>
@{
    ViewData["Title"] = "Dividends";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">Create New Dividend</a>
    </div>

    <table class="table table-striped table-bordered table-dark">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Stock Id</th>
                <th>User Id</th>
                <th>Amount</th>
                <th>Received Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.DividendId</td>
                    <td>@item.StockId</td>
                    <td>@item.UserId</td>
                    <td>@item.Amount</td>
                    <td>@item.ReceivedDate.ToString("g")</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.DividendId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.DividendId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.DividendId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this dividend?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6">No dividends available.</td></tr>
        }
        </tbody>
    </table>
</div>
