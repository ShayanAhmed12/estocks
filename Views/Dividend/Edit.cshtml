@model WebApplication2.Models.Dividend
@{
    ViewData["Title"] = "Edit Dividend";
}

<div class="container mt-4">
    <h1 class="h3 text-light">@ViewData["Title"]</h1>

    <form asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="DividendId" />

        <div class="mb-3">
            <label asp-for="StockId" class="form-label text-light"></label>
            <input asp-for="StockId" class="form-control" />
            <span asp-validation-for="StockId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserId" class="form-label text-light"></label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label text-light"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ReceivedDate" class="form-label text-light"></label>
            <input asp-for="ReceivedDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="ReceivedDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
