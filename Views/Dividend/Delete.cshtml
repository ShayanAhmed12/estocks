@model WebApplication2.Models.Dividend
@{
    ViewData["Title"] = "Delete Dividend";
}

<div class="container mt-4">
    <h1 class="h3 text-light">@ViewData["Title"]</h1>

    <div class="alert alert-danger">Are you sure you want to delete this dividend?</div>

    <div class="card mb-3 bg-dark text-light">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.DividendId</dd>

                <dt class="col-sm-3">Stock Id</dt>
                <dd class="col-sm-9">@Model.StockId</dd>

                <dt class="col-sm-3">User Id</dt>
                <dd class="col-sm-9">@Model.UserId</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.Amount</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DividendId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
