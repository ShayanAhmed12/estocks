@model IEnumerable<WebApplication2.Models.Order>

@{
    ViewData["Title"] = "My Orders";
    var orders = Model?.ToList() ?? new List<WebApplication2.Models.Order>();

    // Compute summary stats
    int totalOrders = orders.Count;
    int totalQuantity = orders.Sum(o => o.Quantity);
    long totalValue = orders.Sum(o => (long)o.Quantity * o.Price);
    int openOrders = orders.Count(o => o.OrderStatus);
    int closedOrders = totalOrders - openOrders;
}

<style>
    body {
        background: linear-gradient(135deg, #050505, #0a1a2f);
        font-family: 'Segoe UI', sans-serif;
    }

    .orders-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-title {
        color: #1e90ff;
        font-weight: bold;
        margin-bottom: 2rem;
        text-shadow: 0 0 10px rgba(30, 144, 255, 0.2);
    }


    .orders-card {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(30, 144, 255, 0.1);
        border: 1px solid #1c2a3d;
        padding: 1rem;
    }

  
    .table-header {
        background: linear-gradient(135deg, #122b4a, #0a1a2f);
        padding: 1.5rem 2rem;
        border-bottom: 2px solid #1c2a3d;
    }

    .table-header h2 {
        color: #1e90ff;
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
    }

    /* Table */
    .orders-table {
        width: 100%;
        border-collapse: collapse;
    }

    .orders-table thead {
        background: #122b4a;
    }

    .orders-table th {
        color: #1e90ff;
        font-weight: 600;
        padding: 1.2rem 1.5rem;
        border-bottom: 2px solid #1c2a3d;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 1px;
    }

    .orders-table td {
        padding: 1.5rem;
        color: #e9eef2;
        border-bottom: 1px solid #1c2a3d;
        vertical-align: middle;
    }

    .orders-table tbody tr {
        transition: all 0.2s ease;
    }

    .orders-table tbody tr:hover {
        background: rgba(30, 144, 255, 0.08);
        transform: scale(1.01);
    }

    /* Badges */
    .badge-open {
        background: rgba(40,167,69,0.15);
        color: #28a745;
        border-radius: 20px;
        padding: 0.4rem 1rem;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        border: 1px solid rgba(40,167,69,0.2);
        letter-spacing: 0.5px;
    }

    .badge-closed {
        background: rgba(220,53,69,0.12);
        color: #dc3545;
        border-radius: 20px;
        padding: 0.4rem 1rem;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        border: 1px solid rgba(220,53,69,0.2);
        letter-spacing: 0.5px;
    }

    /* Buttons */
    .view-btn {
        background: linear-gradient(135deg, #1e90ff, #0073e6);
        color: white;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .view-btn:hover {
        background: linear-gradient(135deg, #0073e6, #005bb5);
        transform: scale(1.05);
        box-shadow: 0 4px 15px rgba(30, 144, 255, 0.3);
        color: white;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #9aa4ae;
    }

    .empty-state i {
        font-size: 5rem;
        color: #1e90ff;
        opacity: 0.3;
        margin-bottom: 1.5rem;
    }

    /* Modal Consistency */
    .modal-content {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border: 1px solid #1c2a3d;
        color: #e9eef2;
        border-radius: 12px;
    }

    .modal-header {
        border-bottom: 1px solid #1c2a3d;
    }

    .modal-footer {
        border-top: 1px solid #1c2a3d;
    }

    .muted {
        color: #9aa4ae;
        font-size: 0.9rem;
    }
  


    .summary-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .summary-card {
        background: linear-gradient(145deg, #0a1a2f, #061323);
        border-radius: 14px;
        padding: 1.25rem;
        border: 1px solid #122b4a;
        box-shadow: 0 8px 30px rgba(2, 6, 23, 0.6);
    }

    .summary-label {
        color: #9aa4ae;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 0.4rem;
    }

    .summary-value {
        font-size: 1.6rem;
        font-weight: 700;
        color: #e9eef2;
    }

    .summary-value .accent {
        color: #1e90ff;
    }


    .controls-row {
        display: flex;
        gap: 0.75rem;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.75rem;
        flex-wrap: wrap;
    }

    .controls-left {
        display:flex;
        gap:0.75rem;
        align-items:center;
    }

    .search-input {
        background: #0f2a44;
        border: 1px solid #1c2a3d;
        color: #e9eef2;
        padding: 0.5rem 0.75rem;
        border-radius: 10px;
        min-width: 260px;
    }

    .filter-select {
        background: #0f2a44;
        border: 1px solid #1c2a3d;
        color: #e9eef2;
        padding: 0.45rem 0.6rem;
        border-radius: 10px;
    }

</style>

<div class="orders-container">
    <h1 class="page-title display-4">My Orders</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="summary-row mb-3">
        <div class="summary-card">
            <div class="summary-label">Total Orders</div>
            <div class="summary-value"><span class="accent">@totalOrders</span></div>
            <div class="muted">Open: @openOrders • Closed: @closedOrders</div>
        </div>

        <div class="summary-card">
            <div class="summary-label">Total Quantity</div>
            <div class="summary-value">@totalQuantity</div>
            <div class="muted">Aggregate of quantities across orders</div>
        </div>

        <div class="summary-card">
            <div class="summary-label">Total Value</div>
            <div class="summary-value">$@totalValue.ToString("N0")</div>
            <div class="muted">Sum of (quantity × price)</div>
        </div>

        <div class="summary-card">
            <div class="summary-label">Last Order</div>
            <div class="summary-value">
                @if (orders.Any())
                {
                    var last = orders.OrderByDescending(o => o.OrderId).First();
                    <span class="accent">#@last.OrderId</span>
                }
                else
                {
                    <span class="accent">—</span>
                }
            </div>
            <div class="muted">Most recent order id</div>
        </div>
    </div>

    <div class="orders-card">
        <div class="controls-row">
            <div class="controls-left">
                <input id="orderSearch" type="search" class="search-input" placeholder="Search by company, order type, or stock id..." />
                <select id="orderFilter" class="filter-select">
                    <option value="">All Types</option>
                    @* gather distinct order types *@
                    @{
                        var types = orders.Select(o => o.OrderType ?? "").Where(t => !string.IsNullOrEmpty(t)).Distinct().ToList();
                    }
                    @foreach (var t in types)
                    {
                        <option value="@t">@t</option>
                    }
                </select>
            </div>

            <div>
                <span class="muted">Showing <strong id="showingCount">@orders.Count</strong> orders</span>
            </div>
        </div>

        @if (orders.Any())
        {
            <div class="table-responsive">
                <table id="ordersTable" class="orders-table">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Company</th>
                            <th>Stock Id</th>
                            <th>Type</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var o in orders)
                        {
                            var company = o.Stock?.CompanyName ?? "Unknown";
                            var statusClass = o.OrderStatus ? "badge-open" : "badge-closed";
                            <tr data-company="@company.ToLower()" data-type="@(o.OrderType?.ToLower() ?? "")" data-stockid="@(o.StockId?.ToString() ?? "")">
                                <td>#@o.OrderId</td>
                                <td><strong>@company</strong></td>
                                <td>@(o.StockId?.ToString() ?? "—")</td>
                                <td>@o.OrderType</td>
                                <td>@o.Quantity</td>
                                <td>$@o.Price.ToString("N0")</td>
                                <td><span class="@statusClass">@(o.OrderStatus ? "Open" : "Closed")</span></td>
                                <td style="text-align:right">
                                    <button class="view-btn" type="button" data-bs-toggle="modal" data-bs-target="#orderDetailsModal"
                                            data-order='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(new {
                                                o.OrderId,
                                                Company = company,
                                                o.StockId,
                                                o.OrderType,
                                                o.Quantity,
                                                o.Price,
                                                Status = o.OrderStatus ? "Open" : "Closed"
                                            }))'>
                                        View
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-emoji">🧾</div>
                <h5 class="mt-3">No Orders Found</h5>
                <p class="muted">You don't have any orders yet. Make a trade to see orders listed here.</p>
                <a asp-controller="Stocks" asp-action="Index" class="btn btn-primary mt-2">Browse Stocks</a>
            </div>
        }
    </div>
</div>

<!-- Order Details Modal -->
<div class="modal fade" id="orderDetailsModal" tabindex="-1" aria-labelledby="orderDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderDetailsLabel" style="color:#1e90ff">Order Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-5 muted">Order #</dt>
                    <dd class="col-7" id="modalOrderId">#</dd>

                    <dt class="col-5 muted">Company</dt>
                    <dd class="col-7" id="modalCompany">—</dd>

                    <dt class="col-5 muted">Stock Id</dt>
                    <dd class="col-7" id="modalStockId">—</dd>

                    <dt class="col-5 muted">Type</dt>
                    <dd class="col-7" id="modalType">—</dd>

                    <dt class="col-5 muted">Quantity</dt>
                    <dd class="col-7" id="modalQty">—</dd>

                    <dt class="col-5 muted">Price</dt>
                    <dd class="col-7" id="modalPrice">—</dd>

                    <dt class="col-5 muted">Status</dt>
                    <dd class="col-7" id="modalStatus">—</dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            // Search/filter logic
            const searchInput = document.getElementById('orderSearch');
            const filterSelect = document.getElementById('orderFilter');
            const rows = Array.from(document.querySelectorAll('#ordersTable tbody tr'));
            const showingCount = document.getElementById('showingCount');

            function updateVisibility() {
                const q = (searchInput.value || '').trim().toLowerCase();
                const typeFilter = (filterSelect.value || '').toLowerCase();

                let visible = 0;
                rows.forEach(r => {
                    const company = r.dataset.company || '';
                    const type = r.dataset.type || '';
                    const stockid = r.dataset.stockid || '';

                    const matchSearch = !q || company.includes(q) || type.includes(q) || stockid.includes(q);
                    const matchType = !typeFilter || type === typeFilter;

                    const show = matchSearch && matchType;

                    r.style.display = show ? '' : 'none';
                    if (show) visible++;
                });

                showingCount.textContent = visible;
            }

            searchInput.addEventListener('input', updateVisibility);
            filterSelect.addEventListener('change', updateVisibility);

            // Populate modal with order data (data-order attribute contains JSON)
            const modal = document.getElementById('orderDetailsModal');
            modal.addEventListener('show.bs.modal', function (e) {
                const btn = e.relatedTarget;
                if (!btn) return;
                const dataJson = btn.getAttribute('data-order');
                try {
                    const data = JSON.parse(dataJson);
                    document.getElementById('modalOrderId').textContent = '#' + (data.OrderId ?? '');
                    document.getElementById('modalCompany').textContent = data.Company ?? 'Unknown';
                    document.getElementById('modalStockId').textContent = data.StockId ?? '—';
                    document.getElementById('modalType').textContent = data.OrderType ?? data.Type ?? '—';
                    document.getElementById('modalQty').textContent = data.Quantity ?? '—';
                    document.getElementById('modalPrice').textContent = '$' + (data.Price ?? 0).toLocaleString();
                    document.getElementById('modalStatus').textContent = data.Status ?? (data.OrderStatus ? 'Open' : 'Closed');
                } catch (err) {
                    console.error('Failed parsing order data:', err);
                }
            });

            // initial count
            showingCount.textContent = rows.filter(r => r.style.display !== 'none').length;
        })();
    </script>
}
