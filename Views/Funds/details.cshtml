@model WebApplication2.Models.Fund

@{
    ViewData["Title"] = Model.FundName;
    var isLoggedIn = User.Identity?.IsAuthenticated ?? false;
}

<style>
    body {
        background: linear-gradient(135deg, #050505, #0a1a2f);
        font-family: 'Segoe UI', sans-serif;
    }

    .details-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .back-button {
        background: rgba(30, 144, 255, 0.1);
        color: #1e90ff;
        border: 1px solid #1c2a3d;
        padding: 0.6rem 1.5rem;
        border-radius: 10px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background: rgba(30, 144, 255, 0.2);
            color: #1e90ff;
            transform: translateX(-5px);
        }

    .fund-header {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border-radius: 20px;
        padding: 3rem;
        margin-bottom: 2rem;
        border: 1px solid #1c2a3d;
        box-shadow: 0 8px 25px rgba(30, 144, 255, 0.1);
    }

    .fund-icon-large {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #1e90ff, #0073e6);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 8px 25px rgba(30, 144, 255, 0.3);
    }

    .fund-title {
        color: #e9eef2;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .fund-type-badge {
        background: rgba(30, 144, 255, 0.15);
        color: #1e90ff;
        padding: 0.5rem 1.5rem;
        border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: inline-block;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .detail-card {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border-radius: 15px;
        padding: 2rem;
        border: 1px solid #1c2a3d;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .detail-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(30, 144, 255, 0.15);
        }

    .detail-card-title {
        color: #9aa4ae;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .detail-card-value {
        color: #e9eef2;
        font-size: 2rem;
        font-weight: bold;
    }

    .nav-card .detail-card-value {
        color: #28a745;
        font-size: 2.5rem;
    }

    .info-section {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border-radius: 20px;
        padding: 2rem;
        margin-top: 2rem;
        border: 1px solid #1c2a3d;
    }

    .info-section-title {
        color: #1e90ff;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 1.2rem 0;
        border-bottom: 1px solid #1c2a3d;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        color: #9aa4ae;
        font-size: 1rem;
        font-weight: 500;
    }

    .info-value {
        color: #e9eef2;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .action-section {
        margin-top: 2rem;
    }

    .invest-btn {
        width: 100%;
        background: linear-gradient(135deg, #28a745, #20803a);
        color: white;
        border: none;
        padding: 1.5rem 2rem;
        border-radius: 15px;
        font-size: 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

        .invest-btn:hover {
            background: linear-gradient(135deg, #20803a, #186429);
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        }

    .login-warning {
        background: linear-gradient(145deg, #2d1f1f, #1a0f0f);
        border: 2px solid #dc3545;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
    }

    

    .login-warning-title {
        color: #dc3545;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .login-warning-text {
        color: #9aa4ae;
        margin-bottom: 1.5rem;
    }

    .login-btn {
        background: linear-gradient(135deg, #1e90ff, #0073e6);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .login-btn:hover {
            background: linear-gradient(135deg, #0073e6, #005bb5);
            transform: scale(1.05);
            color: white;
        }

    .register-link {
        color: #1e90ff;
        text-decoration: none;
        margin-top: 1rem;
        display: inline-block;
    }

        .register-link:hover {
            text-decoration: underline;
        }

    .stats-highlight {
        background: linear-gradient(145deg, #122b4a, #0a1a2f);
        border-radius: 15px;
        padding: 2rem;
        margin-top: 2rem;
        border: 1px solid #1c2a3d;
        text-align: center;
    }

    .stats-highlight-title {
        color: #9aa4ae;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 0.5rem;
    }

    .stats-highlight-value {
        color: #1e90ff;
        font-size: 3rem;
        font-weight: bold;
        text-shadow: 0 0 10px rgba(30, 144, 255, 0.3);
    }

    .alert-info-custom {
        background: rgba(30, 144, 255, 0.1);
        border: 1px solid #1e90ff;
        border-radius: 15px;
        padding: 1.5rem;
        color: #e9eef2;
        margin-top: 2rem;
    }

        .alert-info-custom strong {
            color: #1e90ff;
        }
</style>



<div class="details-container">
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    <a href="@Url.Action("Index", "Funds")" class="back-button">
        ← Back to All Funds
    </a>

    
    <div class="fund-header">
        
        <h1 class="fund-title">@Model.FundName</h1>
        <span class="fund-type-badge">@Model.FundType</span>

        
        <div class="stats-highlight">
            <div class="stats-highlight-title">Current Net Asset Value</div>
            <div class="stats-highlight-value">@Model.NetAssetValue.ToString("N2") PKR</div>
            <p style="color: #9aa4ae; margin-top: 0.5rem; margin-bottom: 0;">per unit</p>
        </div>
    </div>

    
    <div class="details-grid">
        <div class="detail-card nav-card">
            <div class="detail-card-title">
                 Net Asset Value
            </div>
            <div class="detail-card-value">@Model.NetAssetValue.ToString("N2") PKR</div>
            <p style="color: #9aa4ae; margin-top: 0.5rem; margin-bottom: 0;">Current NAV per unit</p>
        </div>

        <div class="detail-card">
            <div class="detail-card-title">
                 Fund Type
            </div>
            <div class="detail-card-value" style="font-size: 1.5rem;">@Model.FundType</div>
            <p style="color: #9aa4ae; margin-top: 0.5rem; margin-bottom: 0;">Investment category</p>
        </div>

        <div class="detail-card">
            <div class="detail-card-title">
                 Fund ID
            </div>
            <div class="detail-card-value" style="color: #1e90ff;">#@Model.FundId</div>
            <p style="color: #9aa4ae; margin-top: 0.5rem; margin-bottom: 0;">Unique identifier</p>
        </div>
    </div>

    
    <div class="info-section">
        <h2 class="info-section-title"> Fund Information</h2>

        <div class="info-row">
            <span class="info-label">Fund Name</span>
            <span class="info-value">@Model.FundName</span>
        </div>

        <div class="info-row">
            <span class="info-label">Fund Type</span>
            <span class="info-value">@Model.FundType</span>
        </div>

        <div class="info-row">
            <span class="info-label">Net Asset Value (NAV)</span>
            <span class="info-value" style="color: #28a745;">@Model.NetAssetValue.ToString("N2") PKR</span>
        </div>

        <div class="info-row">
            <span class="info-label">Fund Consolidator</span>
            <span class="info-value">@Model.Consolidator</span>
        </div>

        <div class="info-row">
            <span class="info-label">Fund ID</span>
            <span class="info-value" style="color: #1e90ff;">#@Model.FundId</span>
        </div>
    </div>

    
    <div class="action-section">
        @if (isLoggedIn)
        {
            <form asp-action="Invest" asp-controller="Funds" method="post" class="mt-3" id="investForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.FundId" />

                <div class="info-section action-section" style="padding:2rem;">
                    <h2 class="info-section-title"> Invest in @Model.FundName</h2>

                    <form asp-action="Invest" asp-controller="Funds" method="post" class="mt-3" id="investForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.FundId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="info-label">Amount to invest (PKR)</label>
                                <input type="number" name="amount" class="form-control" min="1" required placeholder="Enter amount" id="investAmount" style="border-radius:12px; padding:0.8rem;" />
                                <div class="form-text text-muted mt-1">NAV: @Model.NetAssetValue.ToString("N2") per unit PKR</div>
                            </div>

                            <div class="col-md-6 d-flex flex-column justify-content-end">
                                <div class="mb-3">
                                    <div class="info-label">Estimated Units</div>
                                    <div id="estimatedUnits" style="font-weight:700; font-size:1.5rem; color:#1e90ff;">—</div>
                                </div>
                                <button type="submit" class="btn invest-btn w-100">
                                    Invest Now
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

            </form>

            @section Scripts {
                <script>
                    (function () {
                        const nav = parseFloat('@Model.NetAssetValue'); // integer but treat as number
                        const precision = 4;

                        const amountInput = document.getElementById('investAmount');
                        const est = document.getElementById('estimatedUnits');

                        function updateEstimate() {
                            const amount = parseFloat(amountInput.value || 0);
                            if (!amount || amount <= 0) {
                                est.textContent = '—';
                                return;
                            }
                            const rawUnits = amount / nav;

                            const factor = Math.pow(10, precision);
                            const units = Math.floor(rawUnits * factor) / factor;
                            est.textContent = units.toFixed(precision);
                        }

                        amountInput.addEventListener('input', updateEstimate);
                        updateEstimate();
                    })();
                </script>
            }

        }
        else
        {
            
            <div class="login-warning">
                <h3 class="login-warning-title">Login Required</h3>
                <p class="login-warning-text">
                    You need to login to invest in this fund. Create an account or login to start investing!
                </p>
                <a href="@Url.Action("Login", "Users", new { returnUrl = Url.Action("Details", "Funds", new { id = Model.FundId }) })" class="login-btn">
                    Login to Invest
                </a>
                <br />
                <a href="@Url.Action("Register", "Users")" class="register-link">
                    Don't have an account? Register here
                </a>
            </div>
        }
    </div>


    @{
        
        var userInvestments = ViewBag.UserInvestmentsForFund as List<WebApplication2.Models.FundInvestment> ?? new List<WebApplication2.Models.FundInvestment>();
        const int PRECISION = 4; // must match server rounding/truncation policy
    }

    <style>
       
        .fund-investments-block {
            background: linear-gradient(145deg, #071226, #050b14);
            border-radius: 14px;
            padding: 1rem;
            border: 1px solid #122b4a;
            margin-top: 1rem;
        }

        .fi-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
            margin-bottom: 0.75rem;
        }

        .fi-title {
            color: #1e90ff;
            font-weight: 700;
            font-size: 1.05rem;
        }

        .fi-sub {
            color: #9aa4ae;
            font-size: 0.9rem;
        }

        .fi-stats {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        .fi-stat {
            background: linear-gradient(145deg, #0a1a2f, #061323);
            border: 1px solid #122b4a;
            padding: 0.45rem 0.65rem;
            border-radius: 10px;
            text-align: center;
        }

            .fi-stat .label {
                color: #9aa4ae;
                font-size: 0.72rem;
                display: block;
            }

            .fi-stat .val {
                color: #e9eef2;
                font-weight: 700;
                font-size: 0.95rem;
            }

        .fi-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 0.6rem;
        }

            .fi-table thead th {
                text-align: left;
                padding: 0.7rem 0.6rem;
                color: #1e90ff;
                font-weight: 700;
                font-size: 0.82rem;
                border-bottom: 1px solid #122b4a;
            }

            .fi-table td {
                padding: 0.6rem 0.6rem;
                color: #e9eef2;
                border-bottom: 1px solid #122b4a;
                font-size: 0.95rem;
            }

        .empty-fi {
            text-align: center;
            padding: 1.2rem;
            color: #9aa4ae;
        }
    </style>
    @if (isLoggedIn)
    {
        <div class="fund-investments-block">
        <div class="fi-header">
            <div>
                <div class="fi-title">Your investments in this fund</div>
                <div class="fi-sub">A list of purchases you have made for <strong>@Model.FundName</strong></div>
            </div>

            <div class="fi-stats">
                @{

                    decimal totalAmount = userInvestments.Sum(u => (decimal)u.Amount);
                    decimal totalUnits = 0m;
                    foreach (var inv in userInvestments)
                    {
                        if (inv.BuyPrice > 0)
                        {
                            decimal rawUnits = (decimal)inv.Amount / (decimal)inv.BuyPrice;
                            decimal factor = (decimal)Math.Pow(10, PRECISION);
                            decimal units = Math.Floor(rawUnits * factor) / factor;
                            totalUnits += units;
                        }
                    }
                }
                <div class="fi-stat">
                    <span class="label">Invested</span>
                    <span class="val">@(((int)totalAmount).ToString("N0") + " PKR" )</span>
                </div>
                <div class="fi-stat">
                    <span class="label">Total Units</span>
                    <span class="val">@totalUnits.ToString($"F{PRECISION}")</span>
                </div>
                <div class="fi-stat">
                    <span class="label">Entries</span>
                    <span class="val">@userInvestments.Count()</span>
                </div>

            </div>
        </div>

        @if (userInvestments.Any())
        {
            <div class="table-responsive">
                <table class="fi-table">
                    <thead>
                        <tr>
                            <th style="width:10%">#</th>
                            <th style="width:20%">Amount</th>
                            <th style="width:20%">Buy NAV</th>
                            <th style="width:20%">Units</th>
                            <th style="width:15%">Buy Date</th>
                            <th style="width:15%">Maturity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var inv in userInvestments.OrderByDescending(i => i.BuyDate))
                        {
                            decimal units = 0m;
                            if (inv.BuyPrice > 0)
                            {
                                decimal rawUnits = (decimal)inv.Amount / (decimal)inv.BuyPrice;
                                decimal factor = (decimal)Math.Pow(10, PRECISION);
                                units = Math.Floor(rawUnits * factor) / factor;
                            }
                            <tr>
                                <td>#@inv.InvestmentId</td>
                                <td>@inv.Amount.ToString("N0") PKR</td>
                                <td>@inv.BuyPrice.ToString("N2") PKR</td>
                                <td>@units.ToString($"F{PRECISION}")</td>
                                <td>@inv.BuyDate.ToString("MMM dd, yyyy")</td>
                                <td>@inv.Maturity.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-fi">
                <div style="font-size:1.6rem; color:#1e90ff; opacity:0.16;">🧾</div>
                <div style="margin-top:0.6rem">You have no investments in this fund yet.</div>
                <div class="fi-sub" style="margin-top:0.35rem">Use the Invest form above to purchase units of <strong>@Model.FundName</strong>.</div>
            </div>
        }
    </div>
    }
   



    
    <div class="info-section" style="margin-top: 2rem;">
        <h2 class="info-section-title"> About the Consolidator</h2>
        <div class="info-row">
            <span class="info-label">Managed By</span>
            <span class="info-value">@Model.Consolidator</span>
        </div>
        <p style="color: #9aa4ae; margin-top: 1rem; margin-bottom: 0;">
            This fund is professionally managed by @Model.Consolidator. For more information about their investment strategy
            and performance history, please contact them directly.
        </p>
    </div>
</div>
