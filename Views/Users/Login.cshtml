@model WebApplication2.Controllers.LoginRequest
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-4">
    <h1 class="h3 text-light">Login</h1>

    @if (ViewData.ModelState[string.Empty]?.Errors.Count > 0)
    {
        <div class="alert alert-danger" role="alert">
            @foreach (var err in ViewData.ModelState[string.Empty].Errors)
            {
                <div>@err.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="Login" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Email" class="form-label text-light"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label text-light"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
        <a asp-action="Register" class="btn btn-link ms-2 text-light">Register</a>
    </form>
</div>


<div class="modal fade" id="deactivatedModal" tabindex="-1" aria-labelledby="deactivatedModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title" id="deactivatedModalLabel">Account Deactivated</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Your account has been deactivated. Please contact support for assistance.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var isDeactivated = "@TempData["AccountDeactivated"]";
            if (isDeactivated === "true") {
                var deactivatedModal = new bootstrap.Modal(document.getElementById('deactivatedModal'));
                deactivatedModal.show();
            }
        });
    </script>
}

