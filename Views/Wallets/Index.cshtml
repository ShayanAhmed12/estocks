        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="withdrawModalLabel" style="color:#1e90ff;">Withdraw Funds</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-controller="Wallets" asp-action="WithdrawFunds" method="post" id="withdrawForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="withdrawAmount" class="form-label">Amount (PKR)</label>
                        <input type="number" class="form-control" id="withdrawAmount" name="amount" placeholder="Enter amount to withdraw" min="1" required>
                        <div class="form-text" style="color: #9aa4ae;">You can withdraw up to @Model.Balance.ToString("N0") PKR</div>
                    </div>

                    <div class="quick-amounts mb-3">
                        <label class="form-label">Quick Select:</label>
                        <div class="d-flex gap-2 flex-wrap">
                            <button type="button" class="btn btn-sm btn-outline-danger quick-amount-withdraw" data-amount="100">100 PKR</button>
                            <button type="button" class="btn btn-sm btn-outline-danger quick-amount-withdraw" data-amount="500">500 PKR</button>
                            <button type="button" class="btn btn-sm btn-outline-danger quick-amount-withdraw" data-amount="1000">1,000 PKR</button>
                            <button type="button" class="btn btn-sm btn-outline-danger quick-amount-withdraw" data-amount="5000">5,000 PKR</button>
                        </div>
                    </div>

                    @if (userBanks.Any())
                    {
                        <div class="mb-3">
                            <label for="bankSelectWithdraw" class="form-label">Select Bank to receive funds</label>
                            <select class="form-select" id="bankSelectWithdraw" name="bankId" required>
                                <option value="">-- Select bank --</option>
                                @foreach (var b in userBanks)
                                {
                                    var acct = b.AccountNumber.ToString();
                                    var masked = acct.Length > 4 ? "****" + acct.Substring(acct.Length - 4) : acct;
                                    <option value="@b.BankId">@b.BankName - @masked</option>
                                }
                            </select>
                            <div class="form-text" style="color: #9aa4ae;">Withdrawals are sent to the selected bank.</div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <div class="alert alert-warning mb-2">You don't have any bank details saved. Please add a bank account before withdrawing funds.</div>
                            <a asp-controller="Dashboard" asp-action="Billing" class="btn btn-outline-primary">Add Bank Details</a>
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" id="withdrawSubmit" @(userBanks.Any() ? "" : "disabled")>Withdraw</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.querySelectorAll('.quick-amount-add').forEach(btn => {
              btn.addEventListener('click', function () {
                  document.getElementById('addAmount').value = this.dataset.amount;
              });
          });
          document.querySelectorAll('.quick-amount-withdraw').forEach(btn => {
              btn.addEventListener('click', function () {
                  document.getElementById('withdrawAmount').value = this.dataset.amount;
              });
          });

          (function () {
              const addForm = document.getElementById('addFundsForm');
              const bankAdd = document.getElementById('bankSelectAdd');
              const addSubmit = document.getElementById('addFundsSubmit');

              if (addForm && bankAdd) {
                  addForm.addEventListener('submit', function (e) {
                      if (!bankAdd.value) {
                          e.preventDefault();
                          alert('Please select a bank to add funds from.');
                      }
                  });

                  bankAdd.addEventListener('change', function () {
                      if (this.value) addSubmit.removeAttribute('disabled');
                      else addSubmit.setAttribute('disabled', 'disabled');
                  });
              }
          })();

          (function () {
              const wForm = document.getElementById('withdrawForm');
              const bankWithdraw = document.getElementById('bankSelectWithdraw');
              const withdrawSubmit = document.getElementById('withdrawSubmit');
              const withdrawAmount = document.getElementById('withdrawAmount');
              const maxBalance = parseInt('@Model.Balance');

              if (wForm) {
                  wForm.addEventListener('submit', function (e) {
                      const amount = parseInt(withdrawAmount.value || '0');
                      if (!bankWithdraw || !bankWithdraw.value) {
                          e.preventDefault();
                          alert('Please select a bank to withdraw funds into.');
                          return;
                      }
                      if (!amount || amount <= 0) {
                          e.preventDefault();
                          alert('Please enter a valid withdrawal amount.');
                          return;
                      }
                      if (amount > maxBalance) {
                          e.preventDefault();
                          alert('Withdrawal amount exceeds your wallet balance.');
                          return;
                      }
                  });

                  if (bankWithdraw) {
                      bankWithdraw.addEventListener('change', function () {
                          if (this.value) withdrawSubmit.removeAttribute('disabled');
                          else withdrawSubmit.setAttribute('disabled', 'disabled');
                      });
                  }
              }
          })();
        function closeFuturePosition(tradingId) {
            fetch(`/FutureContracts/Close/${tradingId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();   // No popups at all
                } else {
                    console.error(data.message);
                }
            })
            .catch(err => console.error(err));
        }

                let FUTURE_TO_CLOSE = null;

        function openCloseFutureModal(id, type, entry, current, qty, contractId) {

            FUTURE_TO_CLOSE = id;

            let margin = Math.floor(entry * qty * 0.15);

            let pl = type === "LONG"
                ? (current - entry) * qty
                : (entry - current) * qty;

            let total = margin + pl;

            document.getElementById("cf-contractId").innerText = "#" + contractId;
            document.getElementById("cf-type").innerText = type;
            document.getElementById("cf-entry").innerText = entry.toLocaleString() + " PKR";
            document.getElementById("cf-current").innerText = current.toLocaleString() + " PKR";
            document.getElementById("cf-qty").innerText = qty;
            document.getElementById("cf-margin").innerText = margin.toLocaleString() + " PKR";

            const plElement = document.getElementById("cf-pl");
            plElement.innerText = (pl >= 0 ? "+" : "") + pl.toLocaleString() + " PKR";
            plElement.style.color = pl >= 0 ? "#28a745" : "#dc3545";

            document.getElementById("cf-total").innerText = total.toLocaleString() + " PKR";

            new bootstrap.Modal(document.getElementById('closeFutureModal')).show();
        }

            document.getElementById("confirmCloseFutureBtn").addEventListener("click", function () {

            fetch(`/FutureContracts/Close/${FUTURE_TO_CLOSE}`, {
                method: "POST",
                headers: { "Content-Type": "application/json" }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload(); // silent update
                } else {
                    console.error(data.message);
                }
            });
        });



    </script>
}

