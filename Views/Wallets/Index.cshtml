@model WebApplication2.Models.Wallet

@{
    ViewData["Title"] = "My Wallet";

    int totalInvestment = ViewBag.TotalInvestment ?? 0;
    int currentValue = ViewBag.CurrentValue ?? 0;
    int profitLoss = ViewBag.ProfitLoss ?? 0;
    var userStocks = ViewBag.UserStocks as List<WebApplication2.Models.Stock> ?? new List<WebApplication2.Models.Stock>();
    var userBanks = ViewBag.UserBanks as List<WebApplication2.Models.Bank> ?? new List<WebApplication2.Models.Bank>();
}

<style>
    body {
        background: linear-gradient(135deg, #050505, #0a1a2f);
        font-family: 'Segoe UI', sans-serif;
    }

    .wallet-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    .wallet-card {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(30, 144, 255, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #1c2a3d;
        padding: 2rem;
        margin-bottom: 2rem;
    }

        .wallet-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 35px rgba(30, 144, 255, 0.18);
        }

    .balance-display {
        font-size: 3rem;
        font-weight: bold;
        color: #1e90ff;
        text-shadow: 0 0 10px rgba(30, 144, 255, 0.3);
    }

    .stat-card {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border-radius: 15px;
        padding: 1.5rem;
        border: 1px solid #1c2a3d;
        transition: transform 0.2s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 35px rgba(30, 144, 255, 0.18);
        }

    .stat-label {
        color: #9aa4ae;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: bold;
        color: #e9eef2;
    }

    .profit {
        color: #28a745;
    }

    .loss {
        color: #dc3545;
    }

    .table-card {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(30, 144, 255, 0.1);
        border: 1px solid #1c2a3d;
        padding: 0;
    }

    .stock-table {
        width: 100%;
        margin: 0;
    }

        .stock-table thead {
            background: #122b4a;
        }

        .stock-table th {
            color: #1e90ff;
            font-weight: 600;
            padding: 1.2rem 1.5rem;
            border-bottom: 2px solid #1c2a3d;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 1px;
        }

        .stock-table td {
            padding: 1.5rem;
            color: #e9eef2;
            border-bottom: 1px solid #1c2a3d;
            vertical-align: middle;
        }

        .stock-table tbody tr {
            transition: all 0.2s ease;
        }

            .stock-table tbody tr:hover {
                background: rgba(30, 144, 255, 0.08);
                transform: scale(1.01);
            }

    .company-name-cell {
        font-weight: 600;
        font-size: 1.1rem;
        color: #e9eef2;
    }

    .price-value {
        color: #28a745;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .view-btn {
        background: linear-gradient(135deg, #1e90ff, #0073e6);
        color: white;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
    }

        .view-btn:hover {
            background: linear-gradient(135deg, #0073e6, #005bb5);
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(30, 144, 255, 0.3);
            color: white;
        }

    .add-funds-btn {
        border-radius: 30px;
        padding: 12px 35px;
        font-size: 1.1rem;
        background: #1e90ff;
        border: none;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(30, 144, 255, 0.2);
    }

    


        .add-funds-btn  {
            background: #0073e6;
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(30, 144, 255, 0.3);
        }

    
    .withdraw-funds-btn {
        border-radius: 30px;
        padding: 12px 35px;
        font-size: 1.1rem;
        background: #1e90ff;
        border: none;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(30, 144, 255, 0.2);
    }

    .withdraw-funds-btn {
        background: #0073e6;
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(30, 144, 255, 0.3);
    }

        .withdraw-funds-btn:hover,
        .withdraw-funds-btn:focus {
            background: #005bb5;
            transform: scale(1.06);
            box-shadow: 0 8px 25px rgba(30, 144, 255, 0.35);
            color: white;
        }


   
    .modal-content {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border: 1px solid #1c2a3d;
        border-radius: 20px;
    }

    .detail-card {
        background: linear-gradient(145deg, #122b4a, #0a1a2f);
        border-radius: 15px;
        padding: 1rem;
        border: 1px solid #1c2a3d;
        margin-bottom: 1rem;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid #1c2a3d;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        color: #9aa4ae;
        font-size: 0.9rem;
    }

    .detail-value {
        color: #e9eef2;
        font-weight: 600;
    }

    .page-title {
        color: #1e90ff;
        font-weight: bold;
        margin-bottom: 2rem;
        text-shadow: 0 0 10px rgba(30, 144, 255, 0.2);
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #9aa4ae;
    }

        .empty-state i {
            font-size: 4rem;
            color: #1e90ff;
            opacity: 0.3;
            margin-bottom: 1rem;
        }
</style>

<div class="wallet-container">
    <h1 class="page-title display-4">My Wallet</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="wallet-card text-center">
        <p class="stat-label mb-2">Current Balance</p>
        <div class="balance-display">@Model.Balance.ToString("N0") PKR</div>
        <p class="text-muted mt-2">Last updated: @Model.LastUpdated.ToString("MMM dd, yyyy hh:mm tt")</p>
        <button type="button" class="btn add-funds-btn mt-3" data-bs-toggle="modal" data-bs-target="#addFundsModal">
            + Add Funds
        </button>

        <button type="button" class="btn add-funds-btn mt-3 ms-3" data-bs-toggle="modal" data-bs-target="#withdrawModal">
            - Withdraw Funds
        </button>

    </div>
   

    
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="stat-card text-center">
                <p class="stat-label">Total Investment</p>
                <div class="stat-value">@totalInvestment.ToString("N0") PKR</div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="stat-card text-center">
                <p class="stat-label">Current Value</p>
                <div class="stat-value">@currentValue.ToString("N0") PKR</div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="stat-card text-center">
                <p class="stat-label">Profit / Loss</p>
                <div class="stat-value @(profitLoss >= 0 ? "profit" : "loss")">
                    @(profitLoss >= 0 ? "+" : "")@profitLoss.ToString("N0") PKR
                </div>
                @if (totalInvestment > 0)
                {
                    var percentage = (profitLoss / (double)totalInvestment) * 100;
                    <small class="text-muted">@percentage.ToString("F2")%</small>
                }
            </div>
        </div>
    </div>

    
    <h2 style="color: #1e90ff; font-weight: bold; margin-bottom: 1.5rem; margin-top: 2rem;">My Stocks Portfolio</h2>

    <div class="table-card">
        @if (userStocks != null && userStocks.Any())
        {
            <div class="table-responsive">
                <table class="stock-table mb-0">
                    <thead>
                        <tr>
                            <th>STOCK ID</th>
                            <th>COMPANY NAME</th>
                            <th>BUY PRICE</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var stock in userStocks)
                        {
                            <tr>
                                <td style="color: #9aa4ae;">#@stock.StockId</td>
                                <td><div class="company-name-cell">@stock.CompanyName</div></td>
                                <td><div class="price-value">@stock.Price.ToString("N0") PKR</div></td>
                                <td>
                                    <button class="view-btn" data-bs-toggle="modal" data-bs-target="#stockModal@(stock.StockId)">
                                        View →
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            
            @foreach (var stock in userStocks)
            {
                <div class="modal fade" id="stockModal@(stock.StockId)" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" style="color: #1e90ff;">@stock.CompanyName Details</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="detail-card">
                                    <div class="detail-row">
                                        <span class="detail-label">Stock ID</span>
                                        <span class="detail-value">#@stock.StockId</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Company Name</span>
                                        <span class="detail-value">@stock.CompanyName</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Current Price</span>
                                        <span class="detail-value" style="color: #28a745;">@stock.Price.ToString("N0") PKR</span>
                                    </div>
                                    @{
                                        var buyQty = ViewBag.StockQuantities != null && ViewBag.StockQuantities.ContainsKey(stock.StockId)
                                        ? ViewBag.StockQuantities[stock.StockId] : 0;
                                    }
                                    <div class="detail-row">
                                        <span class="detail-label">Shares Owned</span>
                                        <span class="detail-value">@buyQty shares</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Total Value</span>
                                        <span class="detail-value" style="color: #1e90ff;">@((stock.Price * buyQty).ToString("N0")) PKR</span>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <a href="@Url.Action("Details", "Stocks", new { symbol = stock.CompanyName })" class="btn btn-primary">
                                    Trade This Stock
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="mb-3"></div>
                <h5>No Stocks Yet</h5>
                <p>Start investing to see your portfolio here.</p>
                <a href="@Url.Action("Index", "Stocks")" class="btn btn-primary mt-3">Browse Stocks</a>
            </div>
        }
    </div>



    
    <h2 style="color: #1e90ff; font-weight: bold; margin-bottom: 1.5rem; margin-top: 2rem;">
        Active Futures Positions 
    </h2>

    <div class="table-card">

        @{
            var futureTradings = ViewBag.FutureTradings as List<WebApplication2.Models.FutureTrading>
            ?? new List<WebApplication2.Models.FutureTrading>();
            int futuresMarginHeld = ViewBag.FuturesMarginHeld ?? 0;
            int futuresUnrealizedPL = ViewBag.FuturesUnrealizedPL ?? 0;
        }

        
        @if (futuresMarginHeld > 0)
        {
            <div style="padding: 1.5rem 2rem; background: rgba(18, 43, 74, 0.3); border-bottom: 1px solid #1c2a3d;">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem;">
                    <div>
                        <div style="color: #9aa4ae; font-size: 0.85rem; margin-bottom: 0.5rem;">Margin Held</div>
                        <div style="color: #e9eef2; font-size: 1.5rem; font-weight: 600;">
                            @futuresMarginHeld.ToString("N0") PKR
                        </div>
                    </div>
                    <div>
                        <div style="color: #9aa4ae; font-size: 0.85rem; margin-bottom: 0.5rem;">Unrealized P&L</div>
                        <div style="color: @(futuresUnrealizedPL >= 0 ? "#28a745" : "#dc3545"); font-size: 1.5rem; font-weight: 700;">
                            @(futuresUnrealizedPL >= 0 ? "+" : "")@futuresUnrealizedPL.ToString("N0") PKR
                        </div>
                    </div>
                </div>
            </div>
        }

        
        @if (futureTradings.Any())
        {
            <div class="table-responsive">
                <table class="stock-table mb-0">
                    <thead>
                        <tr>
                            <th>Contract</th>
                            <th>Type</th>
                            <th>Company</th>
                            <th>Qty</th>
                            <th>Entry</th>
                            <th>Current</th>
                            <th>P/L</th>
                            <th>Expiry</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ft in futureTradings)
                        {
                            var currentPrice = ft.Contract?.Stock?.Price ?? ft.Price;

                            int unrealizedPL = ft.Contract?.ContractType == "LONG"
                            ? (currentPrice - ft.Price) * ft.Quantity
                            : (ft.Price - currentPrice) * ft.Quantity;

                            <tr>
                                <td style="color: #9aa4ae;">#@ft.ContractId</td>

                                <td>
                                    @if (ft.Contract?.ContractType == "LONG")
                                    {
                                        <span style="background: rgba(40, 167, 69, 0.15); color: #28a745; padding: 4px 10px; border-radius: 8px; font-weight: 600;">
                                            LONG
                                        </span>
                                    }
                                    else
                                    {
                                        <span style="background: rgba(220,53,69,0.12); color: #dc3545; padding: 4px 10px; border-radius: 8px; font-weight: 600;">
                                            SHORT
                                        </span>
                                    }
                                </td>

                                <td>
                                    <div class="company-name-cell">
                                        @(ft.Contract?.Stock?.CompanyName ?? $"Stock #{ft.Contract?.StockId}")
                                    </div>
                                </td>

                                <td>@ft.Quantity</td>

                                <td><div class="price-value">@ft.Price.ToString("N0") PKR</div></td>

                                <td><div class="price-value">@currentPrice.ToString("N0") PKR</div></td>

                                <td>
                                    <span style="color: @(unrealizedPL >= 0 ? "#28a745" : "#dc3545"); font-weight: 700;">
                                        @(unrealizedPL >= 0 ? "+" : "")@unrealizedPL.ToString("N0") PKR
                                    </span>
                                </td>

                                <td>@ft.Contract?.ExpiryDate.ToString("MMM dd, yyyy")</td>

                                <td>
                                    <button class="view-btn" data-bs-toggle="modal" data-bs-target="#futureModal@ft.FutureTradingId">
                                        View →
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            
            @foreach (var ft in futureTradings)
            {
                var currentPrice = ft.Contract?.Stock?.Price ?? ft.Price;
                int unrealizedPL = ft.Contract?.ContractType == "LONG"
                ? (currentPrice - ft.Price) * ft.Quantity
                : (ft.Price - currentPrice) * ft.Quantity;

                int marginHeld = (int)(ft.Price * ft.Quantity * 0.15);
                int contractValue = ft.Price * ft.Quantity;

                <div class="modal fade" id="futureModal@ft.FutureTradingId" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" style="color: #1e90ff;">
                                    Futures Position – @ft.Contract?.Stock?.CompanyName
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">

                                <div class="detail-card">
                                    <div class="detail-row">
                                        <span class="detail-label">Contract ID</span>
                                        <span class="detail-value">#@ft.ContractId</span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Position Type</span>
                                        <span class="detail-value" style="color:@(ft.Contract?.ContractType == "LONG" ? "#28a745" : "#dc3545");font-weight:700;">
                                            @(ft.Contract?.ContractType == "LONG" ? "LONG" : "SHORT")
                                        </span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Entry Price</span>
                                        <span class="detail-value">@ft.Price.ToString("N0") PKR</span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Current Price</span>
                                        <span class="detail-value" style="color:@(unrealizedPL >= 0 ? "#28a745" : "#dc3545");font-weight:700;">
                                            @currentPrice.ToString("N0") PKR
                                        </span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Quantity</span>
                                        <span class="detail-value">@ft.Quantity</span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Contract Value</span>
                                        <span class="detail-value">@contractValue.ToString("N0") PKR</span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Margin Held (15%)</span>
                                        <span class="detail-value">@marginHeld.ToString("N0") PKR</span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Unrealized P/L</span>
                                        <span class="detail-value" style="color:@(unrealizedPL >= 0 ? "#28a745" : "#dc3545"); font-weight:700;">
                                            @(unrealizedPL >= 0 ? "+" : "")@unrealizedPL.ToString("N0") PKR
                                        </span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Expiry Date</span>
                                        <span class="detail-value">@ft.Contract?.ExpiryDate.ToString("MMM dd, yyyy")</span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Opened On</span>
                                        <span class="detail-value">@ft.TradeTime.ToString("MMM dd, yyyy hh:mm tt")</span>
                                    </div>
                                </div>

                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                
                                <button class="view-btn"
                                        onclick="openCloseFutureModal(
                                            @ft.FutureTradingId,
                                            '@ft.Contract.ContractType',
                                            @ft.Price,
                                            @currentPrice,
                                            @ft.Quantity,
                                            @ft.ContractId
                                        )">
                                    Close Position
                                </button>

                            </div>
                        </div>
                    </div>
                </div>

                
                <div class="modal fade" id="closeFutureModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title" style="color:#1e90ff;">Close Futures Position</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">

                                <div class="detail-card">
                                    <div class="detail-row">
                                        <span class="detail-label">Contract ID</span>
                                        <span class="detail-value" id="cf-contractId"></span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Type</span>
                                        <span class="detail-value" id="cf-type"></span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Entry Price</span>
                                        <span class="detail-value" id="cf-entry"></span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Current Price</span>
                                        <span class="detail-value" id="cf-current"></span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Quantity</span>
                                        <span class="detail-value" id="cf-qty"></span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Margin Held</span>
                                        <span class="detail-value" id="cf-margin"></span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Projected P/L</span>
                                        <span class="detail-value" id="cf-pl"></span>
                                    </div>

                                    <div class="detail-row">
                                        <span class="detail-label">Return to Wallet</span>
                                        <span class="detail-value" id="cf-total"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="modal-footer">
                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button class="btn btn-danger" id="confirmCloseFutureBtn">Confirm Close</button>
                            </div>

                        </div>
                    </div>
                </div>


            }
        }
        else
        {
            <div class="empty-state">
                <div class="mb-3"></div>
                <h5>No Active Futures</h5>
                <p>Your futures positions will appear here.</p>
            </div>
        }
    </div>


    

</div>

<div class="modal fade" id="addFundsModal" tabindex="-1" aria-labelledby="addFundsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addFundsModalLabel" style="color: #1e90ff;">Add Funds to Wallet</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
     
            <form asp-controller="Wallets" asp-action="AddFunds" method="post" id="addFundsForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="amount" class="form-label">Amount (PKR)</label>
                        <input type="number" class="form-control" id="amount" name="amount" placeholder="Enter amount" min="1" required>
                        <div class="form-text" style="color: #9aa4ae;">Minimum amount: 1 PKR</div>
                    </div>
                    <div class="quick-amounts mb-3">
                        <label class="form-label">Quick Select:</label>
                        <div class="d-flex gap-2 flex-wrap">
