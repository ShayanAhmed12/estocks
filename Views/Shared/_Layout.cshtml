<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Stocks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-dark-overrides.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />
    <style>
        body {
            overflow-x: clip;
        }

        /* Sidebar styling and animation */
        #sidebar {
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 1000;
            transition: transform 0.3s ease-in-out;
            overflow-y: auto;
        }

            #sidebar.closed {
                transform: translateX(-250px);
            }

        /* Main content area */
        #main-content {
            margin-left: 250px;
            transition: margin-left 0.3s ease-in-out;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

            #main-content.expanded {
                margin-left: 0;
            }

        /* Hamburger toggle button - always visible */
        .hamburger-toggle {
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1001;
            transition: left 0.3s ease-in-out;
            cursor: pointer;

        }

            .hamburger-toggle.shifted {
                left: 265px; /* 250px sidebar width + 15px padding */
            }

        #sidebarToggle {
            cursor: pointer;
        }

       
    </style>
</head>
<body class="bg-dark text-light">
    <!-- Overlay for mobile -->
    <div id="sidebar-overlay"></div>

    <!-- Hamburger toggle button - always visible -->
    <button id="hamburgerToggle" class="hamburger-toggle btn btn-outline-primary">
        <span id="hamburgerIcon">☰</span>
    </button>

    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark text-light p-3 closed">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-bold m-0">E-Stocks</h3>
            <span id="sidebarToggle" class="btn btn-sm btn-outline-light d-lg-none">✕</span>
        </div>

        <hr />

        <!-- Main Menu -->
        <ul class="nav flex-column gap-2">
            <li><a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a class="nav-link text-light" asp-controller="Stocks" asp-action="Index">Stocks</a></li>
            

            @if (User.Identity?.IsAuthenticated == true)
            {
                <li><a class="nav-link text-light" asp-controller="Funds" asp-action="Index">Funds</a></li>
                <li><a class="nav-link text-light" asp-controller="Wallets" asp-action="Index">Wallet</a></li>
                <li><a class="nav-link text-light" asp-controller="Orders" asp-action="Index">Orders</a></li>
                <li><a class="nav-link text-light" asp-controller="Dividends" asp-action="Index">Dividends</a></li>
            }
            else
            {
                <li><a class="nav-link text-light" asp-controller="Funds" asp-action="Index">Explore Funds </a></li>
                <li><a class="nav-link text-light" asp-controller="Users" asp-action="Login">Login</a></li>
                <li><a class="nav-link text-light" asp-controller="Users" asp-action="Register">Register</a></li>
            }
        </ul>


        <!-- Bottom Section -->
        <div class="position-absolute bottom-0 start-0 w-100 p-3">
            <hr />
            @if (User.Identity?.IsAuthenticated == true)
            {
                <form asp-controller="Users" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-outline-light w-100 mb-2">Logout</button>
                </form>

                <!-- NEW: Account Dashboard Button -->
                <a class="btn btn-outline-info w-100 mb-2" asp-controller="Dashboard" asp-action="Index">
                    Account Dashboard
                </a>
            }
            <a class="nav-link text-light text-center" asp-controller="Home" asp-action="Privacy">
                Privacy Policy
            </a>
        </div>

    </nav>

    <!-- Main content area -->
    <div id="main-content" class="expanded">
        <!-- Page content -->
        <main class="flex-grow-1 p-4" style="margin-top: 60px;">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="mt-auto container text-center text-muted">
            <hr class="my-4" />
            <p class="mb-0">
                Made by: Hassan Nafees, Shayan Ahmed, and Mohid Raheel
            </p>
            <p class="small">&copy; @DateTime.Now.Year E-Stocks Project</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            const sidebar = document.getElementById("sidebar");
            const mainContent = document.getElementById("main-content");
            const overlay = document.getElementById("sidebar-overlay");
            const sidebarToggle = document.getElementById("sidebarToggle");
            const hamburgerToggle = document.getElementById("hamburgerToggle");
            const hamburgerIcon = document.getElementById("hamburgerIcon");

            // Storage key
            const STORAGE_KEY = 'sidebarClosed';

            // Utility: apply UI according to whether sidebar is closed (true) or open (false)
            function applySidebarState(isClosed) {
                if (!sidebar || !mainContent || !hamburgerToggle || !hamburgerIcon) return;

                // set class on sidebar
                if (isClosed) {
                    sidebar.classList.add('closed');
                } else {
                    sidebar.classList.remove('closed');
                }

                // reversed behavior:
                // when sidebar is closed => main content expands (full width)
                if (isClosed) {
                    mainContent.classList.add('expanded');
                    hamburgerToggle.classList.remove('shifted');
                } else {
                    mainContent.classList.remove('expanded');
                    hamburgerToggle.classList.add('shifted');
                }

                // update hamburger icon
                hamburgerIcon.textContent = isClosed ? '☰' : '✕';
            }

            // Save to localStorage
            function saveSidebarState(isClosed) {
                try {
                    localStorage.setItem(STORAGE_KEY, isClosed ? '1' : '0');
                } catch (err) {
                    // localStorage may be disabled — fail silently
                    console.warn('Could not save sidebar state', err);
                }
            }

            // Read from localStorage; returns boolean or null if not set
            function readSidebarState() {
                try {
                    const v = localStorage.getItem(STORAGE_KEY);
                    if (v === null) return null;
                    return v === '1';
                } catch (err) {
                    return null;
                }
            }

            // Toggle function used by click handlers
            function toggleSidebar() {
                const isClosedNow = sidebar.classList.contains('closed');
                // toggle
                const toClosed = !isClosedNow;
                applySidebarState(toClosed);
                saveSidebarState(toClosed);
                // also ensure overlay is hidden for desktop
                overlay.classList.remove('show');
            }

            // Initialize state on load
            function init() {
                // If a saved state exists, use it. Otherwise keep whatever the DOM markup provides.
                const saved = readSidebarState();

                if (typeof saved === 'boolean') {
                    applySidebarState(saved);
                } else {
                    // No saved preference: derive based on existing sidebar class in DOM (fallback)
                    const currentlyClosed = sidebar.classList.contains('closed');
                    applySidebarState(currentlyClosed);
                }

                // Hook up hamburger click
                if (hamburgerToggle) {
                    hamburgerToggle.addEventListener('click', (e) => {
                        // For mobile, we still toggle open/close but also show overlay
                        if (window.innerWidth < 992) {
                            // mobile: toggle "open" class and overlay
                            if (sidebar.classList.contains('open')) {
                                sidebar.classList.remove('open');
                                overlay.classList.remove('show');
                                // save state: treat mobile 'open' as not closed (false)
                                applySidebarState(true); // keep desktop collapsed layout when mobile closed
                                saveSidebarState(true);
                            } else {
                                sidebar.classList.add('open');
                                overlay.classList.add('show');
                                // when mobile open, reflect saved state as open = not closed
                                applySidebarState(false);
                                saveSidebarState(false);
                            }
                        } else {
                            // desktop: normal toggle that changes layout (and persists)
                            toggleSidebar();
                        }
                    });
                }

                // Mobile close button inside sidebar (the small X)
                if (sidebarToggle) {
                    sidebarToggle.addEventListener('click', () => {
                        sidebar.classList.remove('open');
                        overlay.classList.remove('show');
                        // closing mobile preserves the desktop closed state (we save closed = true)
                        applySidebarState(true);
                        saveSidebarState(true);
                    });
                }

                // Close sidebar when clicking overlay (mobile)
                if (overlay) {
                    overlay.addEventListener('click', () => {
                        sidebar.classList.remove('open');
                        overlay.classList.remove('show');
                        applySidebarState(true);
                        saveSidebarState(true);
                    });
                }

                // Update on resize: ensure mobile/desktop classes align with saved preference
                window.addEventListener('resize', () => {
                    // if switching between mobile/desktop, reapply saved state (so layout remains consistent)
                    const savedNow = readSidebarState();
                    if (typeof savedNow === 'boolean') {
                        applySidebarState(savedNow);
                    }
                });
            }

            // Run init after DOM ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', init);
            } else {
                init();
            }

            // expose for debugging if needed
            window.__estocks_sidebar = {
                apply: applySidebarState,
                save: saveSidebarState,
                read: readSidebarState
            };
        })();
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
