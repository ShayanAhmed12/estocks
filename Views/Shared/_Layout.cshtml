<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Stocks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-dark-overrides.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />
    <style>
        body {
            overflow-x: clip;
        }

        /* Sidebar styling and animation */
        #sidebar {
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 1000;
            transition: transform 0.3s ease-in-out;
            overflow-y: auto;
        }

            #sidebar.closed {
                transform: translateX(-250px);
            }

        /* Main content area */
        #main-content {
            margin-left: 250px;
            transition: margin-left 0.3s ease-in-out;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

            #main-content.expanded {
                margin-left: 0;
            }

        /* Hamburger toggle button - always visible */
        .hamburger-toggle {
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1001;
            transition: left 0.3s ease-in-out;
            cursor: pointer;

        }

            .hamburger-toggle.shifted {
                left: 265px; /* 250px sidebar width + 15px padding */
            }

        #sidebarToggle {
            cursor: pointer;
        }

       
    </style>
</head>
<body class="bg-dark text-light">
    <!-- Overlay for mobile -->
    <div id="sidebar-overlay"></div>

    <!-- Hamburger toggle button - always visible -->
    <button id="hamburgerToggle" class="hamburger-toggle btn btn-outline-primary shifted">
        <span id="hamburgerIcon">☰</span>
    </button>

    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark text-light p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-bold m-0">E-Stocks</h3>
            <span id="sidebarToggle" class="btn btn-sm btn-outline-light d-lg-none">✕</span>
        </div>

        <hr />

        <!-- Main Menu -->
        <ul class="nav flex-column gap-2">
            <li><a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a class="nav-link text-light" asp-controller="Stocks" asp-action="Index">Stocks</a></li>
            <li><a class="nav-link text-light" asp-controller="Dividends" asp-action="Index">Dividends</a></li>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <li><a class="nav-link text-light" asp-controller="Funds" asp-action="Index">Funds</a></li>
                <li><a class="nav-link text-light" asp-controller="Wallets" asp-action="Index">Wallet</a></li>
                <li><a class="nav-link text-light" asp-controller="Orders" asp-action="Index">Orders</a></li>
            }
            else
            {
                <li><a class="nav-link text-light" asp-controller="Users" asp-action="Login">Login</a></li>
                <li><a class="nav-link text-light" asp-controller="Users" asp-action="Register">Register</a></li>
                <li><a class="nav-link text-light" asp-controller="Funds" asp-action="Index">Explore Funds →</a></li>
            }
        </ul>

        <!-- Bottom Section -->
        <div class="position-absolute bottom-0 start-0 w-100 p-3">
            <hr />
            @if (User.Identity?.IsAuthenticated == true)
            {
                <form asp-controller="Users" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-outline-light w-100 mb-2">Logout</button>
                </form>
            }
            <a class="nav-link text-light text-center" asp-controller="Home" asp-action="Privacy">
                Privacy Policy
            </a>
        </div>
    </nav>

    <!-- Main content area -->
    <div id="main-content">
        <!-- Page content -->
        <main class="flex-grow-1 p-4" style="margin-top: 60px;">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="mt-auto container text-center text-muted">
            <hr class="my-4" />
            <p class="mb-0">
                Made by: Hassan Nafees, Shayan Ahmed, and Mohid Raheel
            </p>
            <p class="small">&copy; @DateTime.Now.Year E-Stocks Project</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("main-content");
        const overlay = document.getElementById("sidebar-overlay");
        const sidebarToggle = document.getElementById("sidebarToggle");
        const hamburgerToggle = document.getElementById("hamburgerToggle");
        const hamburgerIcon = document.getElementById("hamburgerIcon");

        // Function to check if mobile view
        function isMobile() {
            return window.innerWidth < 992;
        }

        // Update hamburger icon based on sidebar state
        function updateHamburgerIcon() {
            if (sidebar.classList.contains("closed") || sidebar.classList.contains("open") === false) {
                hamburgerIcon.textContent = "☰";
            } else {
                hamburgerIcon.textContent = "✕";
            }
        }

        // Main hamburger toggle (works for both mobile and desktop)
        hamburgerToggle.addEventListener("click", () => {
            if (!isMobile()) {
                // Desktop behavior
                sidebar.classList.toggle("closed");
                mainContent.classList.toggle("expanded");
                hamburgerToggle.classList.toggle("shifted");
            } else {
                // Mobile behavior
                if (sidebar.classList.contains("open")) {
                    sidebar.classList.remove("open");
                    overlay.classList.remove("show");
                } else {
                    sidebar.classList.add("open");
                    overlay.classList.add("show");
                }
            }
            updateHamburgerIcon();
        });

        // Mobile close button inside sidebar
        if (sidebarToggle) {
            sidebarToggle.addEventListener("click", () => {
                sidebar.classList.remove("open");
                overlay.classList.remove("show");
                updateHamburgerIcon();
            });
        }

        // Close sidebar when clicking overlay
        overlay.addEventListener("click", () => {
            sidebar.classList.remove("open");
            overlay.classList.remove("show");
            updateHamburgerIcon();
        });

        // Handle window resize
        window.addEventListener("resize", () => {
            if (!isMobile()) {
                sidebar.classList.remove("open");
                overlay.classList.remove("show");
            }
            updateHamburgerIcon();
        });

        // Initialize
        updateHamburgerIcon();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
