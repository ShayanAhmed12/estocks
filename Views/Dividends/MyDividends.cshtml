@model IEnumerable<WebApplication2.Models.Dividend>

@{
    ViewData["Title"] = "My Dividends";
    var dividends = Model?.ToList() ?? new List<WebApplication2.Models.Dividend>();


    int totalEntries = dividends.Count;
    long totalAmount = dividends.Sum(d => (long)d.Amount);
    var lastReceived = dividends.OrderByDescending(d => d.ReceivedDate).FirstOrDefault()?.ReceivedDate;


    var stockNames = dividends
        .Select(d => d.Stock?.CompanyName ?? "Unknown")
        .Where(n => !string.IsNullOrEmpty(n))
        .Distinct()
        .OrderBy(n => n)
        .ToList();
}

<style>
    
    body {
        background: linear-gradient(135deg, #050505, #0a1a2f);
        font-family: 'Segoe UI', sans-serif;
    }

    .summary-value .accent {
        color: #1e90ff;
    }

    .dividends-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-title {
        color: #1e90ff;
        font-weight: bold;
        margin-bottom: 2rem;
        text-shadow: 0 0 10px rgba(30, 144, 255, 0.2);
    }

    .dividends-card {
        background: linear-gradient(145deg, #0a1a2f, #050505);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(30, 144, 255, 0.1);
        border: 1px solid #1c2a3d;
        padding: 1rem;
    }

    .table-header {
        background: linear-gradient(135deg, #122b4a, #0a1a2f);
        padding: 1.2rem 1.5rem;
        border-bottom: 2px solid #1c2a3d;
    }

    .table-header h2 {
        color: #1e90ff;
        margin: 0;
        font-size: 1.3rem;
        font-weight: 600;
    }


    .div-table {
        width: 100%;
        border-collapse: collapse;
    }

    .div-table thead {
        background: #122b4a;
    }

    .div-table th {
        color: #1e90ff;
        font-weight: 600;
        padding: 1.2rem 1.5rem;
        border-bottom: 2px solid #1c2a3d;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 1px;
        text-align: left;
    }

    .div-table td {
        padding: 1.2rem;
        color: #e9eef2;
        border-bottom: 1px solid #1c2a3d;
        vertical-align: middle;
    }

    .div-table tbody tr {
        transition: all 0.2s ease;
    }

    .div-table tbody tr:hover {
        background: rgba(30, 144, 255, 0.08);
        transform: scale(1.01);
    }

    .view-btn {
        background: linear-gradient(135deg, #1e90ff, #0073e6);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .view-btn:hover {
        background: linear-gradient(135deg, #0073e6, #005bb5);
        transform: scale(1.03);
        box-shadow: 0 4px 15px rgba(30, 144, 255, 0.25);
        color: white;
    }

    .muted {
        color: #9aa4ae;
        font-size: 0.9rem;
    }

    .summary-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .summary-card {
        background: linear-gradient(145deg, #0a1a2f, #061323);
        border-radius: 14px;
        padding: 1.15rem;
        border: 1px solid #122b4a;
        box-shadow: 0 8px 30px rgba(2, 6, 23, 0.45);
    }

    .summary-label {
        color: #9aa4ae;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 0.4rem;
    }

    .summary-value {
        font-size: 1.4rem;
        font-weight: 700;
        color: #e9eef2;
    }

    .controls-row {
        display: flex;
        gap: 0.75rem;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.75rem;
        flex-wrap: wrap;
    }

    .controls-left {
        display:flex;
        gap:0.75rem;
        align-items:center;
    }

    .search-input {
        background: #0f2a44;
        border: 1px solid #1c2a3d;
        color: #e9eef2;
        padding: 0.5rem 0.75rem;
        border-radius: 10px;
        min-width: 260px;
    }

    .filter-select {
        background: #0f2a44;
        border: 1px solid #1c2a3d;
        color: #e9eef2;
        padding: 0.45rem 0.6rem;
        border-radius: 10px;
    }

    .empty-state {
        text-align: center;
        padding: 3.5rem 2rem;
        color: #9aa4ae;
    }

    .empty-emoji {
        font-size: 4rem;
        color: #1e90ff;
        opacity: 0.22;
    }
</style>

<div class="dividends-container">
    <h1 class="page-title display-4">My Dividends</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="summary-row mb-3">
        <div class="summary-card">
            <div class="summary-label">Total Entries</div>
            <div class="summary-value"><span class="accent">@totalEntries</span></div>
            <div class="muted">Dividend records in your account</div>
        </div>

        <div class="summary-card">
            <div class="summary-label">Total Received</div>
            <div class="summary-value">@totalAmount.ToString("N0") PKR</div>
            <div class="muted">Sum of amounts</div>
        </div>

        <div class="summary-card">
            <div class="summary-label">Last Received</div>
            <div class="summary-value">
                @if (lastReceived != null)
                {
                    @lastReceived.Value.ToString("MMM dd, yyyy")
                }
                else
                {
                    <span class="muted">—</span>
                }
            </div>
            <div class="muted">Most recent dividend</div>
        </div>

        <div class="summary-card">
            <div class="summary-label">Accounts</div>
            <div class="summary-value"><span class="muted">Personal</span></div>
            <div class="muted">Dividends credited to your wallet</div>
        </div>
    </div>

    <div class="dividends-card">
        <div class="controls-row">
            <div class="controls-left">
                <input id="divSearch" type="search" class="search-input" placeholder="Search by company or stock id..." />
                <select id="divFilter" class="filter-select">
                    <option value="">All Stocks</option>
                    @foreach (var s in stockNames)
                    {
                        <option value="@s">@s</option>
                    }
                </select>
            </div>

            <div>
                <span class="muted">Showing <strong id="showingCount">@dividends.Count</strong> records</span>
            </div>
        </div>

        @if (dividends.Any())
        {
            <div class="table-responsive">
                <table id="dividendsTable" class="div-table">
                    <thead>
                        <tr>
                            <th>Dividend #</th>
                            <th>Company</th>
                            <th>Stock Id</th>
                            <th>Amount</th>
                            <th>Received</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in dividends)
                        {
                            var company = d.Stock?.CompanyName ?? "Unknown";
                            <tr data-company="@company.ToLower()" data-stockid="@(d.StockId?.ToString() ?? "")" data-date="@d.ReceivedDate.ToString("yyyy-MM-dd")">
                                <td>#@d.DividendId</td>
                                <td><strong>@company</strong></td>
                                <td>@(d.StockId?.ToString() ?? "—")</td>
                                <td>@d.Amount.ToString("N0") PKR</td>
                                <td>@d.ReceivedDate.ToString("MMM dd, yyyy")</td>
                                <td style="text-align:right">
                                    <button class="view-btn" type="button" data-bs-toggle="modal" data-bs-target="#dividendDetailsModal"
                                            data-item='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(new {
                                                d.DividendId,
                                                Company = company,
                                                d.StockId,
                                                d.Amount,
                                                Received = d.ReceivedDate.ToString("yyyy-MM-dd HH:mm")
                                            }))'>
                                        View
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-emoji"></div>
                <h5 class="mt-3">No Dividends Found</h5>
                <p class="muted">You have not received any dividends yet.</p>
                <a asp-controller="Stocks" asp-action="Index" class="btn btn-primary mt-2">Browse Stocks</a>
            </div>
        }
    </div>
</div>


<div class="modal fade" id="dividendDetailsModal" tabindex="-1" aria-labelledby="dividendDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dividendDetailsLabel" style="color:#1e90ff">Dividend Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-5 muted">Dividend #</dt>
                    <dd class="col-7" id="modalDividendId">#</dd>

                    <dt class="col-5 muted">Company</dt>
                    <dd class="col-7" id="modalCompany">—</dd>

                    <dt class="col-5 muted">Stock Id</dt>
                    <dd class="col-7" id="modalStockId">—</dd>

                    <dt class="col-5 muted">Amount</dt>
                    <dd class="col-7" id="modalAmount">—</dd>

                    <dt class="col-5 muted">Received</dt>
                    <dd class="col-7" id="modalReceived">—</dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {

            const searchInput = document.getElementById('divSearch');
            const filterSelect = document.getElementById('divFilter');
            const rows = Array.from(document.querySelectorAll('#dividendsTable tbody tr'));
            const showingCount = document.getElementById('showingCount');

            function updateVisibility() {
                const q = (searchInput.value || '').trim().toLowerCase();
                const stockFilter = (filterSelect.value || '').toLowerCase();

                let visible = 0;
                rows.forEach(r => {
                    const company = r.dataset.company || '';
                    const stockid = r.dataset.stockid || '';

                    const matchSearch = !q || company.includes(q) || stockid.includes(q);
                    const matchStock = !stockFilter || company === stockFilter;

                    const show = matchSearch && matchStock;

                    r.style.display = show ? '' : 'none';
                    if (show) visible++;
                });

                showingCount.textContent = visible;
            }

            searchInput.addEventListener('input', updateVisibility);
            filterSelect.addEventListener('change', updateVisibility);

            const modal = document.getElementById('dividendDetailsModal');
            modal.addEventListener('show.bs.modal', function (e) {
                const btn = e.relatedTarget;
                if (!btn) return;
                const dataJson = btn.getAttribute('data-item');
                try {
                    const data = JSON.parse(dataJson);
                    document.getElementById('modalDividendId').textContent = '#' + (data.DividendId ?? '');
                    document.getElementById('modalCompany').textContent = data.Company ?? 'Unknown';
                    document.getElementById('modalStockId').textContent = data.StockId ?? '—';
                    document.getElementById('modalAmount').textContent = (data.Amount ?? 0).toLocaleString() + ' PKR';
                    document.getElementById('modalReceived').textContent = data.Received ?? '—';
                } catch (err) {
                    console.error('Failed parsing dividend data:', err);
                }
            });

            showingCount.textContent = rows.filter(r => r.style.display !== 'none').length;
        })();
    </script>
}

