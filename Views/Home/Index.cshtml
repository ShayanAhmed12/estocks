@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: 'Segoe UI', sans-serif;
    }

    .welcome-box {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .welcome-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    }

    h1 {
        color: #0d6efd;
        letter-spacing: 1px;
    }

    p.lead {
        color: white;
    }

    .btn-primary {
        border-radius: 30px;
        padding: 10px 30px;
        font-size: 1.1rem;
        transition: background 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background: #0b5ed7;
        transform: scale(1.05);
    }

    footer {
        color: white;
    }

    footer strong {
        color:white;
    }
</style>

<div class="container text-center mt-5 text-light">
    <div class="p-5 welcome-box">
        <h1 class="display-3 fw-bold mb-3">Welcome to E-Stocks</h1>
        <p class="lead mb-4">
            Your one-stop solution for managing and tracking stocks efficiently.
        </p>
        @{
            var isAuth = User?.Identity?.IsAuthenticated == true;
        }
        @if (isAuth)
        {
            <a asp-controller="Wallets" asp-action="Index" class="btn btn-primary btn-lg">Get Started</a>
        }
        else
        {
            <a asp-controller="Users" asp-action="Login" class="btn btn-primary btn-lg">Get Started</a>
        }
    </div>

    <footer class="mt-5 text-muted">
        <hr class="my-4" />
        <p class="mb-0">
            Made by: Hassan Nafees, Shayan Ahmed, and Mohid Raheel
        </p>
        <p class="small">&copy; @DateTime.Now.Year E-Stocks Project</p>
    </footer>
</div>
